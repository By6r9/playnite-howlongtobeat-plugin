                </Style>
            </Grid.Style>

            <controlsShared:SliderWithPointer x:Name="PartSliderFirst" VerticalAlignment="Bottom"
                                              ThumbFill="{Binding ThumbFirst, FallbackValue=DarkBlue}"
                                              Visibility="{Binding SliderFirstVisibility}"
                                              Value="{Binding SliderFirstValue, FallbackValue=1}" 
                                              Maximum="{Binding MaxValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Height="{Binding ElementName=PART_ProgressBarFirst, Path=IndicatorDemiHeight}" 
                                              Margin="{Binding ElementName=SliderPlaytime, Path=Margin}" />

            <controlsShared:SliderWithPointer x:Name="PartSliderSecond" VerticalAlignment="Bottom"
                                              ThumbFill="{Binding ThumbSecond, FallbackValue=DarkRed}" 
                                              Visibility="{Binding SliderSecondVisibility}"
                                              Value="{Binding SliderSecondValue, FallbackValue=2}" 
                                              Maximum="{Binding MaxValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Height="{Binding ElementName=PART_ProgressBarFirst, Path=IndicatorDemiHeight}" 
                                              Margin="{Binding ElementName=SliderPlaytime, Path=Margin}" />

            <controlsShared:SliderWithPointer x:Name="PartSliderThird" VerticalAlignment="Bottom"
                                              ThumbFill="{Binding ThumbThird, FallbackValue=Green}"
                                              Visibility="{Binding SliderThirdVisibility}"
                                              Value="{Binding SliderThirdValue, FallbackValue=3}" 
                                              Maximum="{Binding MaxValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Height="{Binding ElementName=PART_ProgressBarFirst, Path=IndicatorDemiHeight}" 
                                              Margin="{Binding ElementName=SliderPlaytime, Path=Margin}" />

