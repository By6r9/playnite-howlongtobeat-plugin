        <StackPanel Name="PART_ShowToolTip" Orientation="Horizontal" 
                    Visibility="{Binding ShowToolTip, Converter={StaticResource BooleanToVisibilityConverter}}" 
                    Height="{Binding ElementName=PART_ProgressBarFirst, Path=IndicatorHeight}">
            <StackPanel.Style>
                <Style TargetType="{x:Type StackPanel}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding TextInsideVisibility}" Value="True">
                            <Setter Property="VerticalAlignment" Value="Stretch"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding TextAboveVisibility}" Value="True">
                            <Setter Property="VerticalAlignment" Value="Bottom"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding TextBelowVisibility}" Value="True">
                            <Setter Property="VerticalAlignment" Value="Top"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            
            <StackPanel Name="spHltb_El1" Width="0" Background="Transparent"
                        IsEnabled="{Binding ElementName=tpHltb_El1, Path=Content, Converter={StaticResource StringNullOrEmptyToBoolConverter}}">
                <StackPanel.ToolTip>
                    <ToolTip Name="tpHltb_El1" />
                </StackPanel.ToolTip>
            </StackPanel>
            <StackPanel Name="spHltb_El2" Width="0" Background="Transparent"
                        IsEnabled="{Binding ElementName=tpHltb_El2, Path=Content, Converter={StaticResource StringNullOrEmptyToBoolConverter}}">
